<wxs module="tools" src="../../utils/tools.wxs"></wxs>

<view class="hotop">
  <view class="hotopct">
    <view class="hoticon"></view>
    <view class="hottime">更新日期：{{nowDate}}</view>
  </view> 
</view>

<!-- 歌曲列表 -->
<view class="hotcont">
  <navigator class="m-sgitem" wx:for="{{hotSongs}}" wx:key="id" url="/pages/player/index?id={{item.id}}">
    <view class="sgfl">{{tools.formatNumber(index+1)}}</view>
    <view class="sgfr">
      <view class="sgchfl">
        <view class="f-thide sgtl">
          {{item.name}}
          <text class="sgalia" wx:if="{{item.alias[0]}}">({{item.alias[0]}})</text>
        </view>
        <view class="f-thide sginfo">{{item.artists}} - {{item.name}}</view>
      </view>
      <view class="sgchfr">
        <view class="sgchply"></view>
      </view>
    </view>
  </navigator>
</view>

  
  