.f-thide {
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  word-break: normal;
}
.m-sglst {
  position: relative;
}
.m-sglst .m-sgitem {
  padding-left: 20rpx;
  display: flex;
}
.m-sglst .m-sgitem .sgfl {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 80rpx;
  font-size: 34rpx;
  margin-left: -20rpx;
}
.m-sglst .m-sgitem .sgfr {
  flex: 1 1 auto;
  display: flex;
  position: relative;
}
.m-sglst .m-sgitem .sgfr::after {
  position: absolute;
  z-index: 2;
  top: 0;
  left: 0;
  content: '';
  display: block;
  width: 100%;
  height: 100%;
  border-bottom: 1px solid rgba(0, 0, 0, 0.1);
}
.m-sglst .m-sgitem .sgchfl {
  flex: 1 1 auto;
  width: 0;
  padding: 12rpx 0;
}
.m-sglst .m-sgitem .sgchfr {
