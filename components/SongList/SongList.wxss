}
.m-sglst .m-sgitem .sgtl {
  font-size: 34rpx;
}
.m-sglst .m-sgitem .sginfo {
  font-size: 24rpx;
  color: #888;
}
.m-sglst .m-sgitem .sgalia {
  color: #888;
  margin-left: 8rpx;
}
.m-sglst .m-sgitem .sgchply {
  background-image: url(https://s3.music.126.net/mobile-new/img/index_icon_2x.png?5207a28c3767992ca4bb6d4887c74880=);
  background-repeat: no-repeat;
  background-size: 166px 97px;
  display: inline-block;
  width: 22px;
  height: 22px;
  background-position: -24px 0;
}
